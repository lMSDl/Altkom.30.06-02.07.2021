<Window x:Class="ArchitecturalPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchitecturalPatterns"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <ToggleButton x:Name="ToggleButton_MVC"
                              Click="ToggleButton_Click_MVC">MVC</ToggleButton>
            <ToggleButton x:Name="ToggleButton_MVP"
                              Click="ToggleButton_Click_MVP">MVP</ToggleButton>
            <ToggleButton x:Name="ToggleButton_MVVM"
                              Click="ToggleButton_Click_MVVM">MVVM</ToggleButton>
        </StackPanel>
        <Frame DockPanel.Dock="Right"
                   NavigationUIVisibility="Hidden"
                   x:Name="Frame" />

    </DockPanel>
    </Grid>
</Window>
